<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_stock_indent_document">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <!--<t t-foreach="docs" t-as="o">-->

                    <div class="page">
                        <div class="row">
                            <div class="col-xs-12" style="text-align:center;">
                                <h2 ><strong >Stock Indent</strong></h2>
                                <hr></hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">Operating Unit :</div>
                            <div class="col-xs-3"><span t-esc="operating_unit_name"/></div>
                        </div>
                        <div class="row">
                            <t t-if="source_department_name">
                                <div class="col-xs-3">From Department :</div>
                                <div class="col-xs-3"><span t-esc="source_department_name"/></div>
                            </t>
                        </div>
                        <br></br>
                        <div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Required Date</th>
                                        <th>Quantity Required</th>
                                        <th>Unit Price</th>
                                        <th>Sub Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="o">
                                        <t t-foreach="o.product_lines" t-as="l">
                                            <tr>
                                                <td><span t-esc="l.name"/></td>
                                                <td><span t-esc="l.required_date"/></td>
                                                <td><span t-esc="l.product_uom_qty"/></td>
                                                <td><span t-esc="l.price_unit"/></td>
                                                <td><span t-esc="l.price_subtotal"/></td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--</t>-->
                </t>
            </t>
        </template>
        
    </data>
</openerp>