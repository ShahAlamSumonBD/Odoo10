            <!--<field name="model_id" ref="model_indent_indent"/>-->
            <!--<field name="domain_force">[('indentor_id','=',user.id)]</field>-->
            <!--<field name="global" eval="True"/>-->
        <!--</record>-->
    </data>
</openerp>
