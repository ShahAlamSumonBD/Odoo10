<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_purchase_requisition_document">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">

                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12" style="text-align:center;">
                                    <h2 ><strong>Purchase Requisition</strong></h2>
                                    <hr></hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-2">PR NO. :</div>
                                <div class="col-xs-3"><span t-esc="o.name"/></div>
                            </div>
                            <!--<div class="row">-->
                                <!--<div class="col-xs-6">The following materials is required for</div>-->
                                <!--<div class="col-xs-3"><p>.....................</p></div>-->
                                <!--<div class="col-xs-3">Department</div>-->
                            <!--</div>-->
                            <br></br>
                            <div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">sl</th>
                                            <th rowspan="2">Particulars</th>
                                            <th rowspan="2">Store Code</th>
                                            <th rowspan="2">Present Requirement</th>
                                            <th colspan="2">Approx Value</th>
                                            <th colspan="4">Last Purchase</th>
                                            <th rowspan="2">Remarks</th>
                                        </tr>
                                        <tr>
                                            <th>Unit Taka</th>
                                            <th>Total Taka</th>
                                            <th>Date</th>
                                            <th>Qnty</th>
                                            <th>Rate</th>
                                            <th>Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="l">
                                            <tr>
                                                <td>sl</td>
                                                <td><span t-esc="l.name"/></td>
                                                <td><span t-esc="l.description"/></td>
                                                <td><span t-esc="l.product_qty"/></td>
                                                <td>non</td>
                                                <td>non</td>
                                                <td>non</td>
                                                <td>non</td>
                                                <td>non</td>
                                                <td>non</td>
                                                <td>non</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</openerp>