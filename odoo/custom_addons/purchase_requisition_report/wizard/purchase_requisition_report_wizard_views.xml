<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report
                id="custom_report_of_purchase_requisition"
                model="purchase.request"
                string="Purchase Requisition Report"
                report_type="qweb-pdf"
                name="purchase_requisition_report.report_purchase_requisition_document"
                file="purchase_requisition_report.report_purchase_requisition_document"
        />

        <record id="custom_report_of_purchase_requisition" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="purchase_requisition_report.paperformat_purchase_requisition_report"/>
        </record>

        <record id="purchase_requisition_report_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Stock Indent Report">
                    <sheet>
                        <footer>
                            <button name ="process_report" string="Print" type="object" class="oe_highlight"  />
                            <button special="cancel" string="Cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="open_view_purchase_requisition_report" model="ir.actions.act_window">
            <field name="name">Purchase Requisition Reports</field>
            <field name="res_model">purchase.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


